@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script src="/node/jquery/dist/jquery.min.js"></script>
    <link href="/node/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/node/bootstrap/dist/js/bootstrap.min.js"></script>

    <link href="/node/@@fontawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <script src="/node/@@fortawesome/fontawesome-free/js/all.min.js"></script>

</head>
<body>

    <div class="row">
        <div class="col-md-2">
            <div>
                <div class="text-center mt-4 mb-4">
                    <img class="d-block mx-auto mb-4" src="https://getbootstrap.com/docs/4.1/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
                    <h2>Web Admin</h2>
                </div>
                <nav>
                    @{
                        //URL İÇİNDE KONTROL EDER
                        //@Context.Request.Path.Value.Contains("Product");

                        string url = Context.Request.Path.Value;
                    }

                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a class="text-decoration-none @(url.Contains("/User") ? "text-success":"text-dark")" asp-controller="User" asp-action="Index">Admin</a>
                            <span class="badge badge-pill"><i class="fas fa-users"></i></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a class="text-decoration-none @(url.Contains("/Category") ? "text-success":"text-dark")" asp-controller="Category" asp-action="Index">Kategori</a>
                            <span class="badge badge-pill"><i class="fas fa-boxes"></i></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <a class="text-decoration-none @(url.Contains("/Product") ? "text-success":"text-dark")" asp-controller="Product" asp-action="Index">Ürünler</a>
                            <span class="badge badge-pill"><i class="fas fa-box"></i></span>
                        </li>
                        
                    </ul>
                </nav>
            </div>
        </div>
        <div class="col-md-10">
            <div>
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
